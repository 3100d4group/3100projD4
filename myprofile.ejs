                    <br>
                    <a href="purchasehistory" class="btn btn-primary me-2 mb-2">View Order History</a>
                    <%- user.isAdmin==true ? "<a href=\"admin\" class=\"btn btn-success me-2 mb-2\">Admin page</a>" : "" %>
                    <a href="changepassword" class="btn btn-primary me-2 mb-2">Change Passsword</a>
