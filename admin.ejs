<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Online Group Buying</title>
        <!-- google font-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
        <!--bootstrap-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!--CSS style-->
        <style>
            body{
                background:rgb(230, 230, 230);
                font-family: 'Bebas Neue', sans-serif; 
            }
        </style>
    </head>
  <!--navigation bar-->
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid justify-content-left">
            <a class="navbar-brand"  href="homepage.html"> BuyBuyDuck</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link"  href="home"> Home</a>
                    </li>
                    <li class="nav-item">   
                        <a class="nav-link"  href="createproduct"> Create New Product</a>
                    </li> 

                    <li class="nav-item">
                        <a class="nav-link"  href="purchasehistory"> My Purchase History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="myprofile"> My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="logout"> Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--contents-->
        <h1 class="container mt-5 mb-4">Users</h1>
        <%- message %>
        <div style="overflow-y: scroll; height:65vh;">
            <% users.forEach(function(user) { %>
                <div class="container col-11 bg-white p-3">
                    <div class ="row justify-content-evenly align-items-center">
                        <div class = "col-12 col-sm-4 col-md-3 col-lg-2">
                            <img src="data:user/<%user.picture.contentType%>;base64,<%=user.picture.data.toString('base64')%>"
                            class="rounded-circle"
                            style="height: 27vh; width: 27vh; object-fit: cover">
                        </div>
                        <div class = "col-12 col-sm-8 col-md-9 col-lg-7">
                            <div class="row">
                                <h5>User ID: <%= user.userId %> <%= user.isAdmin ? "[Admin]" : "" %></h5>
                            </div>
                            <div class="row">
                                <p>Password: <%= user.passWord %></p>
                            </div>
                            <div class="row">
                                <p>Email: <%= user.email %></p>
                            </div>
                            <div class="row">
                                <form action ="admin" method="POST">
                                    <div class="form-floating">
                                        <input type="text" id="lname" value=<%= user.email %>  name="userToChange" style="display:none" readonly>
                                        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="passwordReset">
                                        <label for="floatingPassword">Reset Password</label>
                                        <br>
                                        <button class="col-4 btn btn-warning" type="submit" name="action" value="Reset">Reset Password</button>
                                        <button class="col-4 btn btn-danger" type="submit" name="action" value="Delete" <%= user.isAdmin ? "disabled" : "" %>><%= user.isAdmin ? "Can't delete admin" : "Delete Account" %></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
